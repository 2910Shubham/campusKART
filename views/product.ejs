    <script>
        // Theme Toggle Functionality
        const themeToggle = document.getElementById('theme-toggle');
        const body = document.body;

        // Check for saved theme preference or use default dark mode
        const savedTheme = localStorage.getItem('theme') || 'dark';
        if (savedTheme === 'light') {
            body.classList.remove('dark-mode');
            body.classList.add('light-mode');
            themeToggle.checked = false; // Changed from true to false
        }

        themeToggle.addEventListener('change', function () {
            if (!this.checked) { // Changed from this.checked to !this.checked
                body.classList.remove('dark-mode');
                body.classList.add('light-mode');
                localStorage.setItem('theme', 'light');
            } else { // Changed from else to match the reversed logic
                body.classList.remove('light-mode');
                body.classList.add('dark-mode');
                localStorage.setItem('theme', 'dark');
            }
        });
        // Product Image Slider Functionality
        const productSlider = document.querySelector('.product-slider');
        const productThumbs = document.querySelectorAll('.product-thumb');
        const indicators = document.querySelectorAll('.image-indicator');
        const prevButton = document.getElementById('prev-button');
        const nextButton = document.getElementById('next-button');
        let currentSlide = 0;
        const slideCount = document.querySelectorAll('.product-slide').length;

        function showSlide(index) {
            // Update slider position
            productSlider.scrollTo({
                left: productSlider.clientWidth * index,
                behavior: 'smooth'
            });

            // Update thumbnails
            productThumbs.forEach(thumb => {
                thumb.classList.remove('active');
                thumb.classList.add('border-navy-600');
                thumb.classList.remove('border-royal-blue-500');
            });
            productThumbs[index].classList.add('active');
            productThumbs[index].classList.remove('border-navy-600');
            productThumbs[index].classList.add('border-royal-blue-500');

            // Update indicators
            indicators.forEach(indicator => {
                indicator.classList.remove('active');
            });
            indicators[index].classList.add('active');

            currentSlide = index;
        }

        // Thumbnail click event
        productThumbs.forEach(thumb => {
            thumb.addEventListener('click', () => {
                const index = parseInt(thumb.querySelector('img').dataset.index);
                showSlide(index);
            });
        });

        // Indicator click event
        indicators.forEach(indicator => {
            indicator.addEventListener('click', () => {
                const index = parseInt(indicator.dataset.index);
                showSlide(index);
            });
        });

        // Next/Previous buttons
        prevButton.addEventListener('click', () => {
            let index = currentSlide - 1;
            if (index < 0) index = slideCount - 1;
            showSlide(index);
        });

        nextButton.addEventListener('click', () => {
            let index = currentSlide + 1;
            if (index >= slideCount) index = 0;
            showSlide(index);
        });

        // Wishlist toggle
        const wishlistButton = document.querySelector('.wishlist-button');
        wishlistButton.addEventListener('click', function () {
            this.classList.toggle('active');
            const icon = this.querySelector('i');
            if (this.classList.contains('active')) {
                icon.classList.remove('far');
                icon.classList.add('fas');
                icon.classList.add('text-danger-500');
            } else {
                icon.classList.remove('fas');
                icon.classList.add('far');
                icon.classList.remove('text-danger-500');
            }
        });
    </script>
